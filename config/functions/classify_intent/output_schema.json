{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "intent": {
      "type": "string",
      "enum": [
        "technical_support",
        "billing_inquiry",
        "feature_request",
        "account_management",
        "product_information",
        "bug_report",
        "integration_help",
        "general_inquiry"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "entities": {
      "type": "object",
      "properties": {
        "product": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "grammarly_free",
              "grammarly_premium",
              "grammarly_business",
              "grammarly_edu",
              "browser_extension",
              "desktop_app",
              "mobile_app",
              "ms_office_plugin",
              "google_docs"
            ]
          }
        },
        "feature": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "error_code": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["windows", "mac", "ios", "android", "web", "chrome", "firefox", "safari", "edge"]
          }
        }
      },
      "required": ["product", "feature", "error_code", "platform"],
      "additionalProperties": false
    },
    "urgency": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    }
  },
  "required": ["intent", "confidence", "entities", "urgency"],
  "additionalProperties": false
}