{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "query": {
      "type": "string",
      "description": "The customer's query or question"
    },
    "intent": {
      "type": "string",
      "description": "The classified intent of the query"
    },
    "urgency": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "The urgency level of the query"
    },
    "entities": {
      "type": "object",
      "properties": {
        "product": {
          "type": "array",
          "items": {"type": "string"}
        },
        "feature": {
          "type": "array",
          "items": {"type": "string"}
        },
        "platform": {
          "type": "array",
          "items": {"type": "string"}
        },
        "error_code": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "conversation_history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {"type": "string"},
          "content": {"type": "string"}
        }
      }
    }
  },
  "required": ["query"]
}